<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical"
    tools:context="com.example.mayank.dotusermodule.PlaceholderFragment">

       <android.support.v7.widget.RecyclerView
            android:id="@+id/item_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/sdj"
            android:layout_weight="1"
          />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/sdj"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingTop="2dp"
        android:elevation="20dp">
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:src = "@drawable/border_all_black"
            android:gravity="center"
            android:id = "@+id/switch_config"
            android:layout_marginRight="1dp"
            >
        </ImageView>
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src = "@drawable/filter_outline"

            android:padding="4dp"
            android:id = "@+id/filter_button"
            android:layout_marginRight="1dp">

        </ImageView>
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text = "SELECT SALON"
            android:textSize="17sp"
            android:gravity="center"
            >
        </TextView>
    </LinearLayout>


</LinearLayout>
