<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/ci_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c1c1c1"
        android:padding="2dp"
        >

        <ImageView
            android:id="@+id/ci_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ci_rl_rl"
            android:src = "@drawable/img0"
            android:scaleType="centerCrop"
            />


        <RelativeLayout
            android:id="@+id/ci_rl_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ci_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingTop="2dp"

                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:text="LONG CURLY FRIED"
                    android:textColor="#000"
                    android:textSize="15dp"
                    />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:padding="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:src = "@drawable/share_variant"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/addToCart_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:src = "@drawable/ic_shopping_basket_white_18dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/like_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:src = "@drawable/ic_favorite_border_white_18dp"
                        android:layout_weight="1"
                        />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>